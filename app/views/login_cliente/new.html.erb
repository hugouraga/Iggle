<%= render "layouts/header" %>

<div class="row">

    <div id="logo-login" class="row">
        <%= image_tag "logo.png",
         :alt => "Descricao img",
        :width => "150px",
        :height => "150px" %>
    </div>

    <div class="row">
        <h2 class="nome-app">Iggle</h2>
    </div>
    <br>

    <div class="row col-md-6 col-md-offset-3 col-xs-offset-1 col-xs-10">
        <%= form_for :session, url: login_cliente_path, method: :post do |f| %>
            <div class="form-group">
                <%= f.email_field :email, placeholder: 'Email', class: 'form-control', id: 'email_login_cliente'%>
            </div>
            <div class="form-group">
                <%= f.password_field :password, placeholder: 'Senha', class: 'form-control', id: 'password_login_cliente' %>
            </div>
            <br>
            <div class="center">
                <%= f.submit 'Entrar', class: 'btn btn-verde', name: 'Entrar' %>
                <br><br>
                <%= link_to 'Voltar', :back, class: 'btn btn-cinza' %>
            </div>
        <% end %>
    </div>
