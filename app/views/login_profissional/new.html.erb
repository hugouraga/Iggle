<%= render "layouts/header" %>

<div class="row">

    <div id="logo-login" class="row">
        <%= image_tag "logo.png",
         :alt => "Descricao img",
        :width => "150px",
        :height => "150px" %>
    </div>

    <div class="row">
        <h2 class="nome-app">Iggle</h2>
    </div>
    <br>

    <div class="row col-md-6 col-md-offset-3 col-xs-offset-1 col-xs-10">
        <%= form_for :session, url: login_profissional_path, method: :post do |f| %>

            <div class="form-group">

                <%= f.email_field :email, placeholder: 'Email', class: 'form-control', name: 'email_login_profissional' %>
            </div>

            <div class="form-group">

                <%= f.password_field :password, placeholder: 'Senha', class: 'form-control', name:'password_login_profissional' %>
            </div>

            <div class="center">
                <br>
                <%= f.submit 'Entrar', class: 'btn btn-verde' %>
                <br><br>
                <%= link_to 'Voltar', entrar_path, class: 'btn btn-cinza' %>
            <div>
        <% end %>
    </div>
</div>
