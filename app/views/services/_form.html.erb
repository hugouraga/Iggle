  <% if service.errors.any? %>
    <div>
    <div class="alert alert-danger">
      <ul>
      <h3>Ops! Encontramos <%= pluralize(service.errors.count, 'erro', 'erros') %> </h3>


      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :service, "Nome" %>
    <%= form.text_field :service, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Descrição" %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :value, "Preço" %>
    <%= form.number_field :value, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :duration, "Duração (em horas)" %>
    <%= form.number_field :duration, max: 9, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address_id, "Endereço (horários de atendimento já inclusos no endereço)" %>
    <%= form.collection_select :address_id, Address.order(:name), :id, :name, {}, {id: "selecionar-endereco", class: "form-control" } %>
  </div>